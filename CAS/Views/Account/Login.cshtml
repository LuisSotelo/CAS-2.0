}

<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 10%;
    }

    #loginForm {
        margin-left: auto;
        margin-right: auto;
        width: 15%;
    }

    .cVdMsq {
        height: 100vh;
    }

    body {
        background-image: url(/src/img/logincas.png) !important;
        background-repeat: no-repeat;
        background-position: center;
        background-size: contain;
    }

    .iNJnBw {
        height: 10em;
    }

    .cfdhCI {
        font-family: Dosis;
        opacity: 0.96;
        font-size: 40px;
        font-weight: 600;
        -webkit-text-align: left;
